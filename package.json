{
	"name": "hyop",
	"version": "0.3.13",
	"description": "Hypermedia Operation. Tiny library (starting at 61 B) to hydrate operations as the hyop attribute. Use standalone or with other Hypermedia libraries like HTMX...Hydration as Hypermedia",
	"keywords": [
		"hypermedia",
		"hydration",
		"hypertext",
		"tiny",
		"minimal bloat",
		"htmx",
		"datastar",
		"intercooler",
		"jquery"
	],
	"homepage": "https://github.com/hyopjs/hyop#readme",
	"bugs": {
		"url": "https://github.com/hyopjs/hyop/issues"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/hyopjs/hyop.git"
	},
	"license": "Apache-2.0",
	"author": {
		"name": "Brian Takita",
		"url": "https://briantakita.me",
		"email": "info+hyop@briantakita.me"
	},
	"type": "module",
	"files": [
		"*.d.ts",
		"*.js",
		"*.json",
		"hyop",
		"multi_hyop",
		"verify_hyop",
		"verify_multi_hyop"
	],
	"types": "./index.d.ts",
	"exports": {
		".": "./index.js",
		"./hyop": "./hyop/index.js",
		"./multi_hyop": "./multi_hyop/index.js",
		"./single_hyop": "./hyop/index.js",
		"./verify_hyop": "./verify_hyop/index.js",
		"./verify_multi_hyop": "./verify_multi_hyop/index.js",
		"./verify_single_hyop": "./verify_hyop/index.js",
		"./package.json": "./package.json"
	},
	"scripts": {
		"build": ":",
		"clean": ":",
		"exec": "$@",
		"prepublishOnly": "pnpm clean && pnpm build && pnpm test",
		"test": "pnpm run /^test:/",
		"test:size": "size-limit",
		"test:type": "check-dts",
		"test:unit": "tsx node_modules/uvu/bin.js . '\\.test\\.(ts|js)$'",
		"disable:test:unit:coverage": "c8 pnpm test:unit"
	},
	"dependencies": {},
	"devDependencies": {
		"@ctx-core/preprocess": "^0.1.3",
		"@size-limit/preset-small-lib": "^11.1.4",
		"@types/jsdom": "^21.1.7",
		"c8": "^10.1.2",
		"check-dts": "^0.8.0",
		"esbuild": "^0.21.5",
		"jsdom": "^24.1.0",
		"size-limit": "^11.1.4",
		"tsx": "^4.15.6",
		"typescript": "next",
		"uvu": "^0.5.6"
	},
	"publishConfig": {
		"access": "public"
	},
	"sideEffects": false,
	"size-limit": [
		{
			"name": "hyop .",
			"import": {
				".": "{ hyop }"
			},
			"limit": "61 B"
		},
		{
			"name": "singleHyop .",
			"import": {
				".": "{ singleHyop }"
			},
			"limit": "61 B"
		},
		{
			"name": "hyop ./hyop",
			"import": {
				"./hyop": "{ hyop }"
			},
			"limit": "61 B"
		},
		{
			"name": "multi_hyop .",
			"import": {
				".": "{ multi_hyop }"
			},
			"limit": "81 B"
		},
		{
			"name": "multiHyop .",
			"import": {
				".": "{ multiHyop }"
			},
			"limit": "81 B"
		},
		{
			"name": "multi_hyop ./multi_hyop",
			"import": {
				"./multi_hyop": "{ multi_hyop }"
			},
			"limit": "81 B"
		},
		{
			"name": "verify_hyop .",
			"import": {
				".": "{ verify_hyop }"
			},
			"limit": "148 B"
		},
		{
			"name": "verifySingleHyop .",
			"import": {
				".": "{ verifySingleHyop }"
			},
			"limit": "148 B"
		},
		{
			"name": "verify_hyop ./verify_hyop",
			"import": {
				"./verify_hyop": "{ verify_hyop }"
			},
			"limit": "148 B"
		},
		{
			"name": "verify_multi_hyop .",
			"import": {
				".": "{ verify_multi_hyop }"
			},
			"limit": "165 B"
		},
		{
			"name": "verifyMultiHyop .",
			"import": {
				".": "{ verifyMultiHyop }"
			},
			"limit": "165 B"
		},
		{
			"name": "verify_multi_hyop ./verify_multi_hyop",
			"import": {
				"./verify_multi_hyop": "{ verify_multi_hyop }"
			},
			"limit": "165 B"
		}
	]
}